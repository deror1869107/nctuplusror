<%= simple_form_for @bulletin do |f| %>
  <%= f.input :content, label: "內容" %>
  <%= f.input :post_time, label: "發文時間", :as => :date_picker %>
  <%= f.input :bulletin_type, :as => :select, :collection => [["最新消息", false],["網站改版", true]] %>
  <%= f.submit "送出", :class => "btn btn-primary" %>
<% end %>
