<%= simple_form_for @bulletin do |f| %>
  <%= f.input :content, label: "內容" %>
  <%= f.input :post_time, label: "發文時間", :as => :datetime_picker, input_html: { data: { date_options: { locale: "zh-tw" } } } %>
  <%= f.input :bulletin_type, label: "發文種類", :as => :select, :collection => [["最新消息", false],["網站改版", true]] %>
  <%= f.submit "送出", :class => "btn btn-primary" %>
<% end %>
